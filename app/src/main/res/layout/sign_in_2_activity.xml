<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView_signinpage_2"
        android:layout_width="374dp"
        android:layout_height="137dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"
        app:riv_corner_radius="5dp"
        tools:ignore="UnknownIdInLayout"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Billinformation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bill_information"
        app:layout_constraintTop_toBottomOf="@+id/imageView_signinpage_2"
        tools:layout_editor_absoluteX="21dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="342dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textLongMessage|textEmailAddress"
        android:hint="@string/address"
        android:textColorHint="@color/information_color"
        app:layout_constraintTop_toBottomOf="@+id/Billinformation_view"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_card"
        android:layout_width="341dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/atm_card_number"
        android:textColorHint="@color/information_color"
        android:digits="1234567890"
        android:maxLength="16"
        app:layout_constraintTop_toBottomOf="@+id/editText_address"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>